{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "rootDir": "src",
        "incremental": true,
        "esModuleInterop": true,
        "typeRoots": ["./node_modules/vuetify/types"],
        "types": ["@nuxt/types", "@nuxtjs/axios", "reflect-metadata", "vuetify", "@types/jest", "node"],
        "paths": {
            "client": ["client"],
            "common": ["common"],
            "test": ["test"]
        }
    },
    "exclude": ["test/**"]
}
