{
    "name": "ychanter",
    "version": "0.0.0",
    "description": "YChanter CMS",
    "author": "jmsbrone",
    "private": true,
    "license": "none",
    "scripts": {
        "dev": "export NODE_OPTIONS=--openssl-legacy-provider && nuxt",
        "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register server_start.js",
        "build": "export NODE_OPTIONS=--openssl-legacy-provider && nuxt build",
        "build-prod": "run-s clean:dist compile:server compile:client copy:prod",
        "clean:dist": "rm -rf dist",
        "compile:server": "tsc -b tsconfig.build.json --verbose",
        "compile:client": "cross-env mode=production exec_type=build nuxt build -c src/server/application/modules/client-nuxt/nuxt.config.js",
        "copy:prod": "run-s copy:.nuxt copy:client copy:nuxt-config copy:config",
        "copy:client": "copyfiles -a \"client/**/*\" dist",
        "copy:.nuxt": "copyfiles -a \".nuxt/**/*\" dist",
        "copy:nuxt-config": "copyfiles -f src/nuxt.config.js dist",
        "copy:config": "copyfiles package.json package-lock.json dist",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@casl/ability": "^5.3.1",
        "@nuxtjs/axios": "^5.13.1",
        "axios": "^0.26.1",
        "core-js": "^3.8.3",
        "cross-env": "^7.0.3",
        "dayjs": "^1.10.4",
        "dotenv": "^14.3.2",
        "jquery": "^3.6.0",
        "js-cookie": "^2.2.1",
        "nuxt": "^2.15.7",
        "pug": "^3.0.2",
        "random-string": "^0.2.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.2.0",
        "tiptap-vuetify": "^2.24.0",
        "vue-class-component": "^7.2.6",
        "vuex-class-component": "^2.3.5",
        "vuex-module-decorators": "^1.0.1"
    },
    "devDependencies": {
        "@fortawesome/free-brands-svg-icons": "^5.15.3",
        "@fortawesome/free-solid-svg-icons": "^5.15.3",
        "@nuxt/types": "^2.14.12",
        "@nuxt/typescript-build": "^2.0.4",
        "@nuxtjs/style-resources": "^1.0.0",
        "@nuxtjs/vuetify": "^1.12.1",
        "@types/jest": "^27.0.2",
        "@types/jquery": "^3.5.5",
        "@types/js-cookie": "^3.0.1",
        "@types/lodash": "^4.14.168",
        "@types/node": "^17.0.13",
        "@typescript-eslint/eslint-plugin": "^5.10.1",
        "@typescript-eslint/parser": "^5.10.1",
        "babel-jest": "^27.3.1",
        "eslint": "^8.7.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.3.1",
        "lodash": "^4.17.21",
        "nuxt-property-decorator": "^2.9.1",
        "prettier": "^2.2.1",
        "pug-plain-loader": "^1.1.0",
        "sass": "^1.32.8",
        "sass-loader": "^10.1.1",
        "ts-jest": "^27.0.7",
        "ts-loader": "^8.3.0",
        "ts-morph": "^11.0.3",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.1.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "globalSetup": "../test/test-setup.ts",
        "moduleNameMapper": {
            "^client/(.*)$": "<rootDir>/client/$1",
            "^common/(.*)$": "<rootDir>/common/$1",
            "^test/(.*)$": "<rootDir>/test/$1"
        }
    }
}
